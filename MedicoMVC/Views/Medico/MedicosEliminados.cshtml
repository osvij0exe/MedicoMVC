@model ICollection<MedicoMVC.Models.Response.MedicoDTOResponse>

@{
    ViewBag.Title = "Meidcos dados de baja";
    Layout = "_LayOut";
}


<section>
    <div class="container">
        <h1>Lista de Medico que fueron dados de baja</h1>
        <div class="row">
            <div class="col mt-3">
                @if(Model is null)
                {
                    <p>Sin resultados</p>
                }
                else if(!Model.Any())
                {
                    <p>Sin datos para mostrar</p>
                }
                else
                {
                    <table class="table table-hover table-striped">
                        <thead>
                            <tr class="table-success">
                                <th>Codigo</th>
                                <th>Nombre Completo</th>
                                <th>Matricula</th>
                                <th>Cedula Profesional</th>
                                <th>Especialidad</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.MedicoId </td>
                                    <td>@item.NombreCompleto </td>
                                    <td>@item.Matricula </td>
                                    <td>@item.CedulaProfecional </td>
                                    <td>@item.Especialidad </td>
                                    <td>
                                        <a asp-controller="Medico" asp-action="Reactivar" asp-route-Id="@item.MedicoId"><i class="bi bi-bootstrap-reboot"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-auto">
                <a class="Btn" asp-controller="Home" asp-action="Index">Regresar<span><i class="bi bi-plus-circle"></i></span></a>
            </div>
        </div>
    </div>
</section>

